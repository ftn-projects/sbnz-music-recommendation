<kmodule xmlns="http://www.drools.org/xsd/kmodule" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <!-- Classic rules (covers filterRules + specificationRules) -->
    <kbase name="appRulesKBase" packages="rules.filterRules, rules.specificationRules, rules.affinityRules, rules.aggregationRules" default="true">
        <ksession name="appKsession" type="stateful"/>
    </kbase>

    <!-- CEP rules (everything under rules.cep) -->
    <kbase name="musicCepKBase" packages="rules.cep" eventProcessingMode="stream">
        <ksession name="musicCepKsession" type="stateful" clockType="realtime"/>
    </kbase>

</kmodule>